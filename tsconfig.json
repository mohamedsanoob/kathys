{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/account/_components/HomeItems.jsx",
    "src/app/page.tsx",
    "src/components/HomeCollections.tsx",
    "src/app/cart/components/CartItems.jsx",
    "src/app/cart/components/Checkout.jsx",
    "src/app/cart/page.jsx",
    "src/app/categories/page.jsx",
    "src/app/categories/[categoryName]/page.tsx",
    "src/app/categories/[categoryName]/[productId]/page.tsx",
    "src/app/product/page.jsx",
    "src/app/product/_components/ProductDetails.tsx",
    "src/app/categories/[categoryName]/[productId]/_components/Review.jsx",
    "src/app/categories/[categoryName]/[productId]/_components/SimiliarProducts.jsx",
    "src/app/layout.jsx",
    "src/app/loading.jsx",
    "src/app/StoreProvider.jsx",
    "src/components/BestSellers.jsx",
    "src/components/Footer.jsx",
    "src/components/HomeCart.jsx",
    "src/components/Navbar.jsx",
    "src/components/PostNav.jsx",
    "src/firebase/firebase.js",
    "src/lib/api/get-products.ts"
  ],
  "exclude": ["node_modules"]
}
